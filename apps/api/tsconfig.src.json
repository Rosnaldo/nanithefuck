
{
    "compilerOptions": {
        "outDir": "./build",
        "rootDir": "./src",
        "module": "commonjs",
        "target": "ES2020",
        "esModuleInterop": true,
        "strict": true,
        "typeRoots": [
            "./src/@types",
            "./@types",
            "./node_modules/@types"
        ],
        "composite": true
    },
    "extends": "./tsconfig.base.json",
    "include": ["./src/*.ts", "./src/**/*.ts", "./src/**/*.d.ts"],
    "exclude": ["./tests/*.test.ts", "./tests/**/*.ts"]
}
