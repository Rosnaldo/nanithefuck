{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "outDir": "./build",
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "paths": {
            "#routes/*": ["routes/*"],
            "#properties/*": ["properties/*"],
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/*.ts", "./src/**/*.ts"],
    "exclude": ["node_modules"]
}
